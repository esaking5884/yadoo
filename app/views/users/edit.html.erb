<h1>ユーザー情報編集</h1>
<%= form_with model: @user, local: true do |f| %>
    <table>
        <tr>
            <th>
                <%= f.label :image, "プロフィール画像" %>
            </th>
            <td>
                <%= f.file_field :image %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :name, "氏名" %>
            </th>
            <td>
                <%= f.text_field :name %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :account_name, "アカウント名" %>
            </th>
            <td>
                <%= f.text_field :account_name %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :email, "メールアドレス" %>
            </th>
            <td>
                <%= f.text_field :email %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :phone_number, "電話番号" %>
            </th>
            <td>
                <%= f.text_field :phone_number %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :password, "パスワード" %>
            </th>
            <td>
                <%= f.text_field :password %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :passwoed_confirmation, "パスワード確認" %>
            </th>
            <td>
                <%= f.text_field :password_confirmation %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :introduction, "自己紹介" %>
            </th>
            <td>
                <%= f.text_field :introduction %>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <%= f.submit "登録する" %>
            </td>
        </tr>
    </table>
<% end %>