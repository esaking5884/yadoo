<h1>アカウントメニュー</h1>
<ul class ="yado_menu">
  <li><%= link_to "宿を探す", inns_path,{class: "yado_link"} %> </li>
  <li><%= link_to "宿を提供する", new_inn_path,{class: "yado_link"} %></li>
</ul>
<div class="user_info_container">
  <div><img class="user_image" src="<%= "/user_images/#{@user.image_name}" %>"></div>
  <table>
    <tr>
      <th>
        <%= "氏名" %>
      </th>
      <td>
        <%= @user.name %>
      </td>
    </tr>
    <tr>
      <th>
        <%= "アカウント名" %>
      </th>
      <td>
        <%= @user.account_name %>
      </td>
    </tr>
    <tr>
      <th>
        <%= "メールアドレス" %>
      </th>
      <td>
        <%= @user.email %>
      </td>
    </tr>
    <tr>
      <th>
        <%= "電話番号" %>
      </th>
      <td>
        <%= @user.phone_number %>
      </td>
    </tr>
    <tr>
      <th>
        <%= "自己紹介" %>
      </th>
      <td>
        <%= @user.introduction %>
      </td>
    </tr>
  </table>
</div>
<div>
  <ul>
    <li><%= link_to "アカウント情報を編集", edit_user_path %></li>
    <li><%= link_to "アカウント削除", user_path, method: :delete, data: {confirm: "本当に削除しますか？"} %></li>
  </ul>
</div>
<h1>予約情報</h1>
<table>
  <tr>
    <th>宿名</th>
    <th>チェックイン日</th>
    <th>チェックアウト日</th>
    <th>人数</th>
  </tr>
  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.inn.name %></td>
      <td><%= reservation.check_in %></td>
      <td><%= reservation.check_out %></td>
      <td><%= reservation.number_of_people %></td>
    </tr>
  <% end %>
</table>
<h1>My 宿</h1>
<table>
  <% @own_inns.each do |own_inn| %>
    <tr>
      <td><%= own_inn.name %></td>
    </tr>
  <% end %>
</table>
      
